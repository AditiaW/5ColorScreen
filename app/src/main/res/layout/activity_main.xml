        android:text="STMIK Pontianak"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#60bfbf"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="KRS Online"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#8c4b7e"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Perpustakaan"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f8bb44"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Aset"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#f24b2b"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Keuanagan"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/_25ssp" />

</LinearLayout>